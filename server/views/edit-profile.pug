extends layout

block content
  include partials/navbar.pug
  section.title-transparent.page-title(style="background-color:red;")
    .container
      .title-content
        h1 User Profile
  .clearfix

  section.padd-0
    .container
      .col-md-10.translateY-60.col-sm-12.col-md-12.col-md-offset-1
        .add-listing-box.edit-info.mrg-bot-25.padd-bot-30.padd-top-25
          .listing-box-header
            .avater-box
              img.img-responsive.img-circle.edit-avater(src="assets/img/avatar.jpg" alt="")
              .upload-btn-wrapper
                button.btn.theme-btn Change Avatar
                input(type="file" name="myFile")
            h3 #{name}
          form(action="/edit-profile" method="post")
            .row.mrg-r-10.mrg-l-10
              .col-sm-6
                label Name
                input.form-control(type="text", value=name disabled)
              .col-sm-6
                label Email
                input.form-control(type="text", value=email disabled)
              .col-sm-6
                label Phone
                input.form-control(type="text", name="phone" value=phone )

            .add-location.mrg-bot-25.padd-bot-30.padd-top-25
              .listing-box-header
                i.ti-location-pin.theme-cl
                h3 Edit Location
                p Write Address information about your listing location
          
            .row.mrg-r-10.mrg-l-10
              .col-sm-6
                label Country
                input.form-control(type="text" name="country" value=country disabled)
              .col-sm-6
                label State
                input.form-control(type="text" name ="state" value=state  disabled)
              .col-sm-6
                label Address
                input.form-control(type="text" name="address" value=address )
        
            .full-detail.mrg-bot-25.padd-bot-30.padd-top-25
              .listing-box-header
                i.ti-write.theme-cl
                h3 Full Details
                p Write Address information about your listing location
          
            .row.mrg-r-10.mrg-l-10
              .col-sm-6
                label 
                  i.fa.fa-facebook.mrg-r-5(aria-hidden="true")
                  | facebook Link  
                input.form-control(type="text" name ="facebook" value=facebook )
              .col-sm-6
                label 
                  i.fa.fa-twitter.mrg-r-5(aria-hidden="true")
                  | Twitter Link  
                input.form-control(type="text" name="twitter" value=twitter )
            
            .center(style="padding : 2em;")
              button.btn.btn-midium.theme-btn.btn-radius.width-200#login-btn(type="submit") Save
  include partials/footer.pug