      .col-md-10.col-sm-12.col-md-offset-1.mob-padd-0
        .add-listing-box.general-info.mrg-bot-25.padd-bot-30.padd-top-25
          .listing-box-header
            i.ti-files.theme-cl
            h3 General Information
            p Write Some general information about your listing
          form(action="")
            .row.mrg-r-10.mrg-l-10
              .col-sm-6
                label Listing Title
                input.form-control(type="text")
              .col-sm-6
                label Keyword
                input.form-control(type="text")
              .col-sm-6
                label Category
                select.form-control(data-placeholder="Choose Category" tabindex="2")
                  option Sports 
              .col-sm-6
                label Website
                input.form-control(type="text")
              .col-sm-6
                label Description
                textarea.h-100.form-control
            
        .add-listing-box.add-location.mrg-bot-25.padd-bot-30.padd-top-25
          .listing-box-header
            i.ti-location-pin.theme-cl
            h3 Add Location
            p Write Address information about your listing location
          form(action="")
            .row.mrg-r-10.mrg-l-10
              .col-sm-6
                label Country
                input.form-control(type="text")
              .col-sm-6
                label Address
                input.form-control(type="text")
              .col-sm-6
                label City
                select.form-control(data-placeholder="Choose City" tabindex="2")
                  option Lekki
                  option Maitanma?
              .col-sm-6
                label State
                select.form-control(data-placeholder="Choose State" tabindex="2")
                  option Lagos
                  option Abuja
              .col-sm-6
                label Zip-code
                input.form-control(type="text")
        
        .add-listing-box.full-detail.mrg-bot-25.padd-bot-30.padd-top-25
          .listing-box-header
            i.ti-gallery.theme-cl
            h3 Add Gallery
            p Write full detail information about listing owner
          form.dropzone.dz-clickable.primary-dropzone(action="http://themezhub.com/upload-target")
            .dz-default.dz-message
              i.ti-gallery
              span Drag and drop to change logo

        .add-listing-box.amenities.mrg-bot-25.padd-bot-30.padd-top-25
          .listing-box-header
            i.ti-gift.theme-cl
            h3 Amenities
            p Write Address information about your listing location
