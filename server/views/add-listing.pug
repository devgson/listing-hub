extends layout

block content
  section.title-transparent.page-title(style="background:url(assets/img/title-bg.jpg);")
    .container
      .title-content
        h1 Add Listing
        .breadcrumbs
          a(href="#") Home
          span.gt3_breadcrumb_divider
          span.current Add Listing
  .clearfix

  section
